<h1>Add a new Author</h1>

<%= form_for @author do |p| %>
    <%= p.label :name %> <br>
    <%= p.text_field :name, placeholder: 'Name' %><br>
    <br>
    <%= p.label :surname %>
    <br>
    <%= p.text_area :surname, placeholder: 'Surname' %><br>
    <br>
    <%= p.label :profile %>
    <br>
    <%= p.text_area :profile, placeholder: 'Profile' %><br>
    <br>

    <%= p.submit 'Send' %>

    <% link_to "Authors List", authors_path%>
<% end %>
